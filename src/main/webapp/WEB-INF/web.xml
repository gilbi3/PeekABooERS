  </servlet>
  <servlet-mapping>
  	<servlet-name>SubmitRequestServlet</servlet-name>
  	<url-pattern>/submit-request</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>EmployeeInfoServlet</servlet-name>
  	<servlet-class>com.revature.servlets.EmployeeInfoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>EmployeeInfoServlet</servlet-name>
  	<url-pattern>/getEmployeeInfo</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>GetAllReimbursementsServlet</servlet-name>
  	<servlet-class>com.revature.servlets.GetAllReimbursementsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>GetAllReimbursementsServlet</servlet-name>
  	<url-pattern>/getAllReimbursements</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>ManagerWelcomeServlet</servlet-name>
  	<servlet-class>com.revature.servlets.ManagerWelcomeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ManagerWelcomeServlet</servlet-name>
  	<url-pattern>/managerWelcome</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>EmployeeWelcomeServlet</servlet-name>
  	<servlet-class>com.revature.servlets.EmployeeWelcomeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>EmployeeWelcomeServlet</servlet-name>
  	<url-pattern>/employeeWelcome</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>AjaxResolutionServlet</servlet-name>
  	<servlet-class>com.revature.servlets.AjaxResolutionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AjaxResolutionServlet</servlet-name>
  	<url-pattern>/getResolutionForm</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>ResolutionServlet</servlet-name>
  	<servlet-class>com.revature.servlets.ResolutionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ResolutionServlet</servlet-name>
  	<url-pattern>/resolveReimbursement</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>AjaxRequestFormServlet</servlet-name>
  	<servlet-class>com.revature.servlets.AjaxRequestFormServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AjaxRequestFormServlet</servlet-name>
  	<url-pattern>/getRequestForm</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>AjaxEmployeeUpdateFormServlet</servlet-name>
  	<servlet-class>com.revature.servlets.AjaxEmployeeUpdateFormServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AjaxEmployeeUpdateFormServlet</servlet-name>
  	<url-pattern>/employeeUpdateForm</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>EmployeeUpdateInfoServlet</servlet-name>
  	<servlet-class>com.revature.servlets.EmployeeUpdateInfoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>EmployeeUpdateInfoServlet</servlet-name>
  	<url-pattern>/employeeUpdateInfo</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>GetAllUsersServlet</servlet-name>
  	<servlet-class>com.revature.servlets.GetAllUsersServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>GetAllUsersServlet</servlet-name>
  	<url-pattern>/getAllUsers</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>RetrieveReceiptServlet</servlet-name>
  	<servlet-class>com.revature.servlets.RetrieveReceiptServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>RetrieveReceiptServlet</servlet-name>
  	<url-pattern>/retrieveReceipt</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>RegisterEmployeeServlet</servlet-name>
  	<servlet-class>com.revature.servlets.RegisterEmployeeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>RegisterEmployeeServlet</servlet-name>
  	<url-pattern>/registerEmployee</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>AjaxRegistrationForm</servlet-name>
  	<servlet-class>com.revature.servlets.AjaxRegistrationForm</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AjaxRegistrationForm</servlet-name>
  	<url-pattern>/ajaxRegistrationForm</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>UploadReceiptServlet</servlet-name>
  	<servlet-class>com.revature.servlets.UploadReceiptServlet</servlet-class>
  	<multipart-config>
        <max-file-size>10485760</max-file-size>
        <max-request-size>20971520</max-request-size>
        <file-size-threshold>5242880</file-size-threshold>
    </multipart-config>
  </servlet>
  <servlet-mapping>
  	<servlet-name>UploadReceiptServlet</servlet-name>
  	<url-pattern>/upload-receipt</url-pattern>
  </servlet-mapping>
  
  <error-page>
	  <exception-type>com.revature.exceptions.InvalidCredentialsException</exception-type>
	  <location>/loginerror.html</location> 
  </error-page>
  
  <error-page>
	  <exception-type>com.revature.exceptions.InvalidInitialCredentialsException</exception-type>
	  <location>/initialloginerror.html</location> 
  </error-page>
  
  <error-page>
	  <exception-type>com.revature.exceptions.ImageNotFoundException</exception-type>
	  <location>/noreceiptfounderror.html</location> 
  </error-page>
  
  <error-page>
	  <exception-type>com.revature.exceptions.NoSessionFoundException</exception-type>
	  <location>/logouterror.html</location> 
  </error-page>
  
  <error-page>
	  <exception-type>com.revature.exceptions.PasswordMismatchException</exception-type>
	  <location>/passwordmismatch.html</location> 
  </error-page>
  
</web-app>